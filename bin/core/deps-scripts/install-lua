#!/usr/bin/env bash
set -euo pipefail

CURRENT_DIR=$(pwd)
LUA_VERSION="5.1"
LUAROCKS_VERSION="3.9.2"
LUAROCKS_INSTALL_DIR="$HOME/.luarocks"

echo "üöÄ Installation des d√©pendances syst√®me pour Lua $LUA_VERSION..."

install_system_packages() {
  if [[ "$(uname)" == "Linux" ]]; then
    if command -v apt-get &> /dev/null; then
      sudo apt-get update
      sudo apt-get install -y lua${LUA_VERSION} liblua${LUA_VERSION}-0 liblua${LUA_VERSION}-0-dev
    elif command -v dnf &> /dev/null; then
      sudo dnf install -y lua${LUA_VERSION} lua${LUA_VERSION}-devel
    else
      echo "‚ö†Ô∏è Gestionnaire de paquets non support√©, installe manuellement"
      exit 1
    fi
  elif [[ "$(uname)" == "Darwin" ]]; then
    if command -v brew &> /dev/null; then
      brew update
      brew install lua@${LUA_VERSION}
    else
      echo "‚ö†Ô∏è Homebrew non trouv√©, installe-le manuellement"
      exit 1
    fi
  else
    echo "‚ùå Syst√®me non reconnu"
    exit 1
  fi
}

install_system_packages

echo "üì¶ T√©l√©chargement et installation de LuaRocks $LUAROCKS_VERSION..."

cd /tmp
curl -L -R -O https://luarocks.org/releases/luarocks-${LUAROCKS_VERSION}.tar.gz
tar zxpf luarocks-${LUAROCKS_VERSION}.tar.gz
cd luarocks-${LUAROCKS_VERSION}

# Configure et compile LuaRocks
./configure --with-lua-include=/usr/include/lua${LUA_VERSION} --prefix=$LUAROCKS_INSTALL_DIR
make
make install

# Ajoute LuaRocks au PATH dans la session actuelle
export PATH="$LUAROCKS_INSTALL_DIR/bin:$PATH"

echo "‚úÖ LuaRocks install√© dans $LUAROCKS_INSTALL_DIR."

echo "üõ† V√©rification des versions :"
lua -v
luarocks --version
