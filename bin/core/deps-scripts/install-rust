#!/usr/bin/env bash
set -euo pipefail

echo "üöÄ Installation de Rust via rustup..."

# T√©l√©chargement du script d'installation dans un fichier temporaire
TMP_SCRIPT="$(mktemp)"
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs -o "$TMP_SCRIPT"

# V√©rification que le script n'est pas vide
if [[ ! -s "$TMP_SCRIPT" ]]; then
  echo "‚ùå √âchec du t√©l√©chargement du script rustup."
  rm -f "$TMP_SCRIPT"
  exit 1
fi

# Ex√©cution du script d'installation
bash "$TMP_SCRIPT" -y

# Nettoyage
rm -f "$TMP_SCRIPT"

# Ajoute Rust au PATH dans la session actuelle
export PATH="$HOME/.cargo/bin:$PATH"
source "$HOME/.cargo/env"

rustc --version

echo "‚úÖ Rust install√© avec rustup."
