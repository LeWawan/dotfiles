# nvim
if [[ $(uname) == Linux ]]
then
  echo 'Linux detected...'
  alias vim="~/nvim-linux64/bin/nvim"
  alias nvim="~/nvim-linux64/bin/nvim"
elif [[ $(uname) == Darwin ]]
then
  echo 'Macos detected...'
  alias vim="~/nvim-macos/bin/nvim"
  alias nvim="~/nvim-macos/bin/nvim"
else
  echo "zsh_aliases error: device uname not recognized"
fi

